<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tabbar_compose_blur_background">


    <!--下面的realtiveLayout是底部关闭X的-->
    <RelativeLayout
        android:id="@+id/dialog_icon_close_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/tabbar_compose_background_icon_close"/>

    </RelativeLayout>


    <!--下面的LinearLayout是中间的图标-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/dialog_icon_close_container"
        android:layout_marginBottom="80dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/tabbar_compose_idea"
                android:gravity="center_horizontal"
                android:text="文本"
                android:textColor="#000000"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_photo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/tabbar_compose_photo"
                android:gravity="center_horizontal"
                android:text="照片/视频"
                android:textColor="#000000"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_artical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/tabbar_compose_headlines"
                android:gravity="center_horizontal"
                android:text="头条文章"
                android:textColor="#000000"
                android:textSize="15sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_sign"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/tabbar_compose_lbs"
                android:gravity="center_horizontal"
                android:text="签到"
                android:textColor="#000000"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_live"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/tabbar_compose_review"
                android:gravity="center_horizontal"
                android:text="直播"
                android:textColor="#000000"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_more"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/tabbar_compose_more"
                android:gravity="center_horizontal"
                android:text="更多"
                android:textColor="#000000"
                android:textSize="15sp"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>

